# PMultiQC Service Environment Configuration
# Copy this file to .env and modify the values for your deployment

# Base URL for the service - CRITICAL: Set this to your actual deployment URL
# Examples:
#   For local testing: http://localhost:8080
#   For production: https://your-domain.com/pmultiqc
#   For subpath deployment: https://your-domain.com/services/pmultiqc
BASE_URL=http://localhost:8080

# Flask Environment
FLASK_ENV=production

# Upload limits (in bytes)
MAX_CONTENT_LENGTH=4294967296

# Storage paths (inside container)
UPLOAD_FOLDER=/tmp/pmultiqc_uploads
OUTPUT_FOLDER=/tmp/pmultiqc_outputs
HTML_REPORTS_FOLDER=/tmp/pmultiqc_html_reports

# Logging
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0

# Container resource limits (optional - uncomment to override)
# MEMORY_LIMIT=16384M
# CPU_LIMIT=4.0
# MEMORY_RESERVATION=12288M
# CPU_RESERVATION=1.0