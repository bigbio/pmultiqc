# Example configuration for deployment at https://abi-services.cs.uni-tuebingen.de/pmultiqc/
# Copy this to .env and modify as needed

# CRITICAL: Set this to your actual deployment URL
BASE_URL=https://abi-services.cs.uni-tuebingen.de/pmultiqc

# Host port mapping (optional, defaults to 8080)
HOST_PORT=8080

# Flask Environment
FLASK_ENV=production

# Upload limits (4GB in bytes)
MAX_CONTENT_LENGTH=4294967296

# Storage paths (inside container)
UPLOAD_FOLDER=/tmp/pmultiqc_uploads
OUTPUT_FOLDER=/tmp/pmultiqc_outputs
HTML_REPORTS_FOLDER=/tmp/pmultiqc_html_reports

# Logging
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0

# Resource limits for production
MEMORY_LIMIT=16384M
CPU_LIMIT=4.0
MEMORY_RESERVATION=12288M
CPU_RESERVATION=1.0