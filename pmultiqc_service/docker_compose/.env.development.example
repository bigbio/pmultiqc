# Example configuration for local development
# Copy this to .env for local testing

# Local development URL
BASE_URL=http://localhost:5000

# Host port mapping
HOST_PORT=5000

# Flask Environment
FLASK_ENV=development

# Upload limits (4GB in bytes)
MAX_CONTENT_LENGTH=4294967296

# Storage paths (inside container)
UPLOAD_FOLDER=/tmp/pmultiqc_uploads
OUTPUT_FOLDER=/tmp/pmultiqc_outputs
HTML_REPORTS_FOLDER=/tmp/pmultiqc_html_reports

# Logging
LOG_LEVEL=DEBUG

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0

# Resource limits for development (smaller)
MEMORY_LIMIT=8192M
CPU_LIMIT=2.0
MEMORY_RESERVATION=4096M
CPU_RESERVATION=0.5